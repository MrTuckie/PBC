#define F_CPU 16000000UL
#include <avr/io.h>
#include <util/delay.h>
#define bot (1 << 4)
#define led (1 << 5)
int x = 1;
int main(void)
{	
	DDRB |= led;
	DDRB &= ~bot;
    while(1)
    {
		if (PINB & bot)
		{	
			_delay_ms(50);
			if (PINB & bot && x == 1)
			{	
				x = 0;
				_delay_ms(25);
			} 
			else
			{
				x = 1;
				_delay_ms(25);
			}
		}
		if (x == 0)
		{
			PORTB |= led;
			_delay_ms(150);
			PORTB &= ~led;
			_delay_ms(150);
			PORTB |= led;
			_delay_ms(150);
			PORTB &= ~led;
			_delay_ms(150);
			PORTB |= led;
			_delay_ms(150);
			PORTB &= ~led;
			_delay_ms(800);
		}
		else
		{
			PORTB ^= led;
			_delay_ms(500);
		}
		
    }
}
